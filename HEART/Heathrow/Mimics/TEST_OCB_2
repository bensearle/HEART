object ocb_mont_dummy(plc_offset=int,b_offset=int,c_offset=int
                ,e_offset=int,src=source,ident = int,ted=string,angle)
begin
just = centrecentre
rotrect (w=66,h=80,fg=decoroff)
clear
x -= 33 y += 40 add
y -= 80 add
x += 66 add line (fg=decorlight) clear 
y += 1 add
y += 79 add
x -= 66 add line (fg=decorshadow) clear
x += 33 y -= 40 clear
fg = red
ch = 18
!x = 18 y = -28 add text (just=centrecentre, ident)!

x = 0 y = 0 clear
      lw=2
      y -= 40 add
      y += 80 add line clear
      y -= 26 x -= 13 add
      y -= 26 x += 26 add line clear
      y += 26 add
      x -= 26 y -= 26 add line clear
      x += 13 y += 13 add clear

end

object main_object (bg,fg,w,h,tbg,tfg)
begin

scale=256
lw=2
x = 0 y = 200 add y -= 600 add line(fg=red) clear
x = 50 y = 200 add y -= 600 add line(fg=red) clear
x = 100 y = 200 add y -= 600 add line(fg=red) clear
x = 150 y = 200 add y -= 600 add line(fg=red) clear
x = 200 y = 200 add y -= 600 add line(fg=red) clear
x = 250 y = 200 add y -= 600 add line(fg=red) clear


scale=120

X=0 Y=100  ocb_test(26000,2000,heathrow,23,"btm",0)
X=50 Y=100  ocb_test(26000,2000,heathrow,23,"btm",0)
X=100 Y=100  ocb_test(26000,2000,heathrow,23,"btm",0)
X=150 Y=100  ocb_test(26000,2000,heathrow,23,"btm",0)
X=200 Y=100  ocb_test(26000,2000,heathrow,23,"btm",0)
X=250 Y=100  ocb_test(26000,2000,heathrow,23,"btm",0)

X=0 Y=0  ocb_test(26000,2000,heathrow,23,"btm",1)
X=50 Y=0  ocb_test(26000,2000,heathrow,23,"btm",1)
X=100 Y=0  ocb_test(26000,2000,heathrow,23,"btm",1)
X=150 Y=0  ocb_test(26000,2000,heathrow,23,"btm",1)
X=200 Y=0  ocb_test(26000,2000,heathrow,23,"btm",1)
X=250 Y=0  ocb_test(26000,2000,heathrow,23,"btm",1)


X=0 Y=-100  ocb_test(26000,2000,heathrow,23,"btm",2)
X=50 Y=-100  ocb_test(26000,2000,heathrow,23,"btm",2)
X=100 Y=-100  ocb_test(26000,2000,heathrow,23,"btm",2)
X=150 Y=-100  ocb_test(26000,2000,heathrow,23,"btm",2)
X=200 Y=-100  ocb_test(26000,2000,heathrow,23,"btm",2)
X=250 Y=-100  ocb_test(26000,2000,heathrow,23,"btm",2)

X=0 Y=-200  ocb_test(26000,2000,heathrow,23,"btm",3)
