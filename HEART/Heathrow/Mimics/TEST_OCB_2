         !RACKED OUT!
         lw=6
         y = -40 add
         y += 20 add
         x -= 7 add
         x += 14 add line clear
         y += 60 x -= 7 add
         y -= 20 add
         x -= 7 add
         x += 14 add line clear
         set add main_menu = "Dress to Off"

         if top_btm_sect <> "sect" then
            begin
            set add main_menu = "Dress to Feeder Earth Off"
            set add main_menu = "Dress to Bus-Bar Earth Off"
            end
         end

      4
      begin
         !FEEDER EARTH OFF!
         if top_btm_sect == "top" then
            begin
            lw=2
            y -= 40 add
            y += 5 add line clear
