         set add main_menu = "Dress to Racked Down"
         set add main_menu = "Dress to Bus-Bar Earth On"
         end

      7
         !BUSBAR EARTH ON!
         begin
         if top_btm_sect == "top" then
         begin
         lw=2
         y += 40 add
