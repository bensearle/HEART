         x -= 20 add line clear
         x += 6 y += 9 add
         x += 8 add line clear
         y += 12 add
         x -= 8 add line clear
         x += 5 add
         y += 10 add line clear
	 end
         set add main_menu = "Dress to Bus-Bar Earth Off"
         end

      default
      begin
      end
   
