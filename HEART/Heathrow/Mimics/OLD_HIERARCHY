         loading_mimic=yes
         end
      hv4
         begin
         set source m = "src(0)"
         set mimic m = "EAST_INTAKE"
         loading_mimic=yes
         end
      hv5
         begin
         set source m = "src(0)"
         set mimic m = "WEST_INTAKE"
         loading_mimic=yes
         end
      hv6
         begin
         set source m = "src(0)"
         set mimic m = "SUB_STN_23"
         loading_mimic=yes
         end
      hv7
         begin
         set source m = "src(0)"
         set mimic m = "SUB_STN_32"
         loading_mimic=yes
         end
      hv8
         begin
         set source m = "src(0)"
         set mimic m = "SUB_STN_62"
         loading_mimic=yes
         end
      hv9
         begin
         set source m = "src(0)"
         set mimic m = "HV_1"
         loading_mimic=yes
         end
      hv10
         begin
         set source m = "src(0)"
         set mimic m = "HV_2"
         loading_mimic=yes
         end
      hv11
         begin
         set source m = "src(0)"
         set mimic m = "HV_3"
         loading_mimic=yes
         end
      hv12
         begin
         set source m = "src(0)"
         set mimic m = "HV_4"
         loading_mimic=yes
         end
      hv13
         begin
         set source m = "src(0)"
         set mimic m = "HV_5"
         loading_mimic=yes
         end
      hv14
         begin
         set source m = "src(0)"
         set mimic m = "HV_6"
         loading_mimic=yes
         end
      hv15
         begin
         set source m = "src(0)"
         set mimic m = "HV_7"
         loading_mimic=yes
         end
      hv16
         begin
         set source m = "src(0)"
         set mimic m = "HV_8"
         loading_mimic=yes
         end
      hv17
