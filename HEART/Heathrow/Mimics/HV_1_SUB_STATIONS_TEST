load mimic_libutil
load ocb_alarm_test
load sub_stn_54
load sub_stn_82
load sub_stn_98

!************** SUB ? **************!
!
object sub_symbol_?

var popup call_var = sub_stn_?

begin
if sub_barcis_alarm(,heathrow) == 1 
or sub_barcis_alarm(,heathrow) == 1 
or sub_barcis_alarm(,heathrow) == 1 
or sub_barcis_alarm(,heathrow) == 1 then
   begin
     W=100 H=25 X=-25 Y=25 RECT(fg=magenta)
   end
else if sub_barcis_alarm(,heathrow) == 2
     or sub_barcis_alarm(,heathrow) == 2 
     or sub_barcis_alarm(,heathrow) == 2 
     or sub_barcis_alarm(,heathrow) == 2 then
     begin
       W=100 H=25 X=-25 Y=25 RECT(fg=flashred)
     end
else if sub_barcis_alarm(,heathrow) == 3
     or sub_barcis_alarm(,heathrow) == 3
     or sub_barcis_alarm(,heathrow) == 3
     or sub_barcis_alarm(,heathrow) == 3 then
     begin
       W=100 H=25 X=-25 Y=25 RECT(fg=red)
     end
else
begin
  w=100 h=25 x=-25 y=25 rect(fg=decoroff)
end

if anyb then
  begin
    request call_var
  end

x = 25 y = 38 text(tfg=white,ch=25,"Sub ?",just=centrecentre) clear

x = 75 y = 25 add x -= 100 add y += 25 add line (fg=white) clear
x = 75 y = 25 add y += 25 add x -= 100 add line (fg=grey40) clear

end
!




!************** SUB 54 **************!

object sub_symbol_54

var call_var = popup  sub_stn_54

begin
if sub_barcis_alarm(8300,heathrow) == 1 
or sub_barcis_alarm(23174,heathrow) == 1 
or sub_barcis_alarm(23194,heathrow) == 1 
or sub_barcis_alarm(23214,heathrow) == 1 
or sub_barcis_alarm(23234,heathrow) == 1 
or sub_barcis_alarm(23334,heathrow) == 1 
or sub_barcis_alarm(23314,heathrow) == 1 
or sub_barcis_alarm(23294,heathrow) == 1 
or sub_barcis_alarm(23274,heathrow) == 1 
or sub_barcis_alarm(23254,heathrow) == 1 
or sub_barcis_alarm(8310,heathrow) == 1 then
   begin
     W=100 H=25 X=-25 Y=25 RECT(fg=magenta)
   end
else if sub_barcis_alarm(8300,heathrow) == 2
     or sub_barcis_alarm(23174,heathrow) == 2 
     or sub_barcis_alarm(23194,heathrow) == 2 
     or sub_barcis_alarm(23214,heathrow) == 2 
     or sub_barcis_alarm(23234,heathrow) == 2 
     or sub_barcis_alarm(23334,heathrow) == 2 
     or sub_barcis_alarm(23314,heathrow) == 2 
     or sub_barcis_alarm(23294,heathrow) == 2 
     or sub_barcis_alarm(23274,heathrow) == 2 
     or sub_barcis_alarm(23254,heathrow) == 2 
     or sub_barcis_alarm(8310,heathrow) == 2 then
     begin
       W=100 H=25 X=-25 Y=25 RECT(fg=flashred)
     end
else if sub_barcis_alarm(8300,heathrow) == 3
     or sub_barcis_alarm(23174,heathrow) == 3
     or sub_barcis_alarm(23194,heathrow) == 3
     or sub_barcis_alarm(23214,heathrow) == 3
     or sub_barcis_alarm(23234,heathrow) == 3
     or sub_barcis_alarm(23334,heathrow) == 3
     or sub_barcis_alarm(23314,heathrow) == 3
     or sub_barcis_alarm(23294,heathrow) == 3
     or sub_barcis_alarm(23274,heathrow) == 3
     or sub_barcis_alarm(23254,heathrow) == 3
     or sub_barcis_alarm(8310,heathrow) == 3 then
     begin
       W=100 H=25 X=-25 Y=25 RECT(fg=red)
     end
else
begin
  w=100 h=25 x=-25 y=25 rect(fg=decoroff)
end

set title call_var = "Sub Station 54"

if anyb then
  begin
    request call_var
  end

x = 25 y = 38 text(tfg=white,ch=25,"Sub 54",just=centrecentre) clear

x = 75 y = 25 add x -= 100 add y += 25 add line (fg=white) clear
x = 75 y = 25 add y += 25 add x -= 100 add line (fg=grey40) clear

end


!************** SUB 82 **************!

object sub_symbol_82
var sub_82_fg = loopback  colour
var call_var = popup  sub_stn_82

begin
if sub_barcis_alarm(8250,heathrow) == 1 
or sub_barcis_alarm(8260,heathrow) == 1 
or sub_barcis_alarm(8270,heathrow) == 1 
or sub_barcis_alarm(8280,heathrow) == 1 
or sub_barcis_alarm(8290,heathrow) == 1 then
   begin
     sub_82_fg = magenta
   end
else if sub_barcis_alarm(8250,heathrow) == 2
     or sub_barcis_alarm(8260,heathrow) == 2 
     or sub_barcis_alarm(8270,heathrow) == 2 
     or sub_barcis_alarm(8280,heathrow) == 2 
     or sub_barcis_alarm(8290,heathrow) == 2 then
     begin
       sub_82_fg = flashred
     end
else if sub_barcis_alarm(8250,heathrow) == 3
     or sub_barcis_alarm(8260,heathrow) == 3
     or sub_barcis_alarm(8270,heathrow) == 3
     or sub_barcis_alarm(8280,heathrow) == 3
     or sub_barcis_alarm(8290,heathrow) == 3 then
     begin
       sub_82_fg = red
     end
else
begin
  sub_82_fg = decoroff
end

set title call_var = "Sub Station 82"


!x = 25 y = 38 text(tfg=white,ch=25,"Sub 82",just=centrecentre) clear

x = 75 y = 25 add x -= 100 add y += 25 add line (fg=white) clear
x = 75 y = 25 add y += 25 add x -= 100 add line (fg=grey40) clear!

x = 0 y = 0 command_button ("Sub 82","",150,"",ch=25)

if anyb then
  begin
    request call_var
  end

end


!************** SUB 98 **************!

object sub_symbol_98

var call_var = popup  sub_stn_98

begin

  w=100 h=25 x=-25 y=25 rect(fg=decoroff)

set title call_var = "Sub Station 98"

if anyb then
  begin
    request call_var
  end

x = 25 y = 38 text(tfg=white,ch=25,"Sub 98",just=centrecentre) clear

x = 75 y = 25 add x -= 100 add y += 25 add line (fg=white) clear
x = 75 y = 25 add y += 25 add x -= 100 add line (fg=grey40) clear

end


object main_object (bg,fg,w,h,tbg,tfg)
begin

sub_symbol_82

end

mimic = main_object w=800,h=540,just=centrecentre,fg=white,bg=black,resizable
